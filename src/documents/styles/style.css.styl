@import 'nib'

color-shadow = #000

a, a:link
	cursor pointer

html, body
	height 100%

body
	padding-top 60px

h1
	padding 0.2em
	border-bottom dashed 1px #333

h2
	border-top dashed 1px #333
	padding-top 0.5em

table
    tfoot, tbody
		th
			border-top 1px solid #DDD

#content
	font-family "Lato", sans-serif

#wrap
	min-height 100%
	height auto
	margin 0 auto -60px
	padding 0 0 60px

#sitefooter
	padding 1em 4em

.profile-icon
	width 56px
	height 56px
	margin 0.2em
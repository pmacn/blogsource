@import 'nib'

a, a:link
	cursor pointer

html, body
	height 100%

body
	padding-top 60px

h1
	border-bottom double 3px #333
	padding-bottom 0.5em
	padding-top	0.5em

h2
	border-top dashed 1px #333
	padding-top 0.5em

table
    tfoot, tbody
		th
			border-top 1px solid #DDD

#content
	font-family "Lato", sans-serif

#wrap
	min-height 100%
	height auto
	margin 0 auto -60px
	padding 0 0 60px

#sitefooter
	height 4em
	padding 1em 4em
	background-color #f5f5f5

.profile-icon
	width 60px
	height 60px
	margin 0.2em
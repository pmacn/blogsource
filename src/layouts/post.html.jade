---
layout: default
---

article#post.col-xs-12.post.col-lg-8.pull-right
    h1!= document.title
    .post-content!= content

aside.col-xs-12.col-lg-4.pull-right
    if document.relatedDocuments && document.relatedDocuments.length > 0
        section#related
            h1 Related posts
            for relatedDocument in document.relatedDocuments
                a(href!= relatedDocument.url)!= relatedDocument.title
                span!= relatedDocument.date.toDateString()

section.col-xs-12.col-lg-8.pull-right
    h1 Comments
    #disqus_thread(aria-live="polite")
        noscript Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a>
    script.
        var disqus_shortname = 'macnaughton';
        var disqus_identifier = '#{site.url + document.url}';
        var disqus_url = '#{site.url + document.url}';
        var disqus_title = '#{document.title}';
        var disqus_script = 'embed.js';

        (function () {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = 'http://' + disqus_shortname + '.disqus.com/' + disqus_script;
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        }());